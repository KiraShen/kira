<view class="profile">
  <view class='form'>

    <view class='form-cell'>
      <text class='form-cell-title'>手机</text>
      <input
        placeholder="请填写您的手机号"
        placeholder-class='form-cell-ph'
        class='form-cell-input'
        confirm-type='next'
        data-cell='1'
        type='number'
        bindinput='input_phone'
        maxlength='11'
        ></input>
    </view>
    <view class='form-cell'>
      <text class='form-cell-title'>密码</text>
      <input
        placeholder="请填写您的密码"
        placeholder-class='form-cell-ph'
        class='form-cell-input'
        confirm-type='next'
        auto-height='true'
        password='true'
        bindinput='input_pswd'
      ></input>
    </view>
    
